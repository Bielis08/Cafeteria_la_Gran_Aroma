---
import promociones from '../lib/promociones.ts'
const promo = promociones[0]
const precio_final = promo.precio - (promo.precio * promo.descuento / 100)
---

<section class="flex py-4 px-96 h-min rounded-b-2xl bg-accent justify-evenly">
    <div>
        <h2 class="text-5xl font-semibold mt-12">{promo.titulo}</h2>
        <p class="text-xl my-12">{promo.descripcion}</p>
        <div class="flex gap-x-8">
            <span class="line-through text-7xl text-black/90">{promo.precio}€</span>
            <span class="text-7xl font-semibold">{precio_final}€</span>
        </div>
        
    </div>
    <div>
        <span class="relative text-7xl z-10 top-20 left-6 text-white font-semibold rounded-full bg-amber-400/70 px-4 py-2">{promo.descuento}%</span>
        <img class="w-auto h-80 rounded-3xl -mt-6" src={promo.imagen} alt="Imagen de la promoción">
    </div>
    
</section>